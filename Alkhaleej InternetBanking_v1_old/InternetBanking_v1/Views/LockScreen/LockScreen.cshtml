@using System.Web.Mvc.Html
@using InternetBanking_v1.Helper
@model InternetBanking_v1.Models.LockScreenViewModel
@{
    ViewBag.Title = "LockScreen";
    Layout = "~/Views/Shared/_LoginLayout .cshtml";
}
<body class="hold-transition lockscreen">
<div class="lockscreen-wrapper">
    <div class="lockscreen-logo">
        <a href="@Url.Action("Login","Login")"><b>Internet</b>Banking</a>
    </div>
    @using (Html.BeginForm(new { autocomplete = "off" }))
    {
        <!-- User name -->
        <div class="lockscreen-name" style="margin-left: 140px;">@ViewBag.LockedUser</div>
        <!-- START LOCK SCREEN ITEM -->
        <div class="lockscreen-item">
            <!-- lockscreen image -->
            <div class="lockscreen-image">
                <img src="~/Content/icons/avatar.png" alt="avatar">
            </div>
            <!-- /.lockscreen-image -->
            <!-- lockscreen credentials (contains the form) -->
            @*        @using (Html.BeginForm(new {autocomplete = "off"}))
                    {*@
            <form class="lockscreen-credentials">
                <div class="input-group">
                    @*<input type="password" class="form-control" placeholder="password">*@
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control ", placeholder = "Password", type = "password", required = "true", autocomplete = "Off" })
                    <div class="input-group-btn">
                        <button type="submit" class="btn"><i class="fa fa-arrow-right text-muted"></i></button>
                    </div>
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </form>
            @*}*@

            <!-- /.lockscreen credentials -->
        </div>
        <!-- /.lockscreen-item -->
        <div class="help-block text-center">
            This user Is Already loged In...
        </div>
        <div class="help-block text-center">
            Enter your password to retrieve your session
        </div>
            @*    <div class="text-center">
                    <a href="../Shared/login.html">Or sign in as a different user</a>
                </div>*@
        <div class="lockscreen-footer text-center">
            Copyright &copy; 2018-2019 <b><a href="http://al-khaleejbank.com/" class="text-black">Al-Khaleej Bank</a></b><br>
            All rights reserved
        </div>
    }
</div>
</body>
