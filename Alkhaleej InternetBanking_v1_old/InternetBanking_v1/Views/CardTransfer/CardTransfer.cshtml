@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        //Card
        var GetMyFavoriteCard = function () {

            //alert('hello');

            $("#myModal").show();
            var user_id = 3;

            $.ajax({
                type: "POST",
                url: "/internetBanking/ElectricityPayment/GetFavoriteCard",
                data: { user_id: user_id },
                success: function (response) {
                    $("#myModalBodyDiv").html(response);

                    $("#myModal").modal("show");
                    //$("#expRow").hide();

                }


            });


        }

        var GetMyFavoriteToCard = function () {

            //alert('hello');

            $("#myModal").show();
            var user_id = 3;

            $.ajax({
                type: "POST",
                url: "/internetBanking/CardTransfer/GetFavoriteCard",
                data: { user_id: user_id },
                success: function (response) {
                    $("#myModalBodyDiv").html(response);

                    $("#myModal").modal("show");


                }


            });


        }


    </script>
}



@*modal*@
