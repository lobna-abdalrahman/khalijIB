                                    @Html.ValidationMessageFor(model => model.Amount)
                                </div>
                                    
                                <div class="form-group">
                                    <label>@GlobalRes.Lable_ToCard</label>
                                    <div class="input-group ">
                                        @Html.TextBoxFor(model => model.ToCard, new { @class = "form-control input-lg", @placeholder = GlobalRes.PlaceHolder_ToCard, maxlength = "19", onkeypress = "return isNumberKey(event)", required = "true", id = "cardNo" })
