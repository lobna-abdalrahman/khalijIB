@model IEnumerable<InternetBanking_v1.Models.AllTransfersViewModel>

@{
    ViewBag.Title = "AllTransfers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        My Transfers
        <small>All Transfers</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> My Transfers</a></li>
        <li class="active">All Transfers</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <!-- TABLE: LATEST Transactions -->
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">My Transfers</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    @*<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>*@
                </div>
            </div>


            <div class="box-body">
                <div class="table-responsive">

                    <table id="salaryTable" class="table table-bordered table-hover table-bordered table-striped">
                        <thead style="color: cadetblue">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TranId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TranName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TranStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TranResult)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TranAmount)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SenderName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReciverName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TranDate)
                                </th>
                                @*<th></th>*@
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TranId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TranName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TranStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TranResult)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TranAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SenderName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReciverName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TranDate)
                                </td>
                                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>*@
                            </tr>
                        }

                    </table>

                </div>
            </div>

        </div>
    </div>
</div>
</section>
