<section class="content-header">
    <h1>
        Payment
        <small>Schedule Payment</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Payment</a></li>
        <li class="active">Schedule Payment</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <!-- Left col -->
        <section class="col-md-10 col-md-offset-1 connectedSortable">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Schedule Your Payment</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    
                    <div class="form-group">
                        <label>Branch</label>
                        <select class="form-control select2" style="width: 100%;">
                            <option selected="selected">فرع الخرطوم</option>
                            <option>فرع بحري</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>From Account Number</label>
                        <select class="form-control select2" style="width: 100%;">
                            <option selected="selected">2405321</option>
                            <option>2405322</option>
                            <option>2405543</option>
                            <option>2405557</option>
                            <option>4534567</option>
                            <option>2405423</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label> To Account Number</label>
                        <div class="input-group ">
                            <input class="form-control input-lg" type="text" placeholder="Account# is...">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-info btn-flat input-lg" data-toggle="modal" data-target="#modal-default">
                                    <span><i class="fa fa-heart"></i></span>
                                </button>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Amount</label>
                        <input class="form-control input-lg" type="text" placeholder="Amount in SDG...">
                    </div>

                    <div class="form-group">
                        <label>From Date:</label>
                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control pull-right" id="datepicker">
                        </div>
                        <!-- /.input group -->
                    </div>

                    <div class="form-group">
                        <label>To Date:</label>
                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control pull-right" id="Todatepicker">
                        </div>
                        <!-- /.input group -->
                    </div>
                    <!-- /.form-group -->

                    <div class="form-group">
                        <label>On Day</label>
                        <input class="form-control input-lg" type="text" placeholder="On Day ...">
                    </div>

                    <br/>
                    <div class="form-group">
                        <div class="col-xs-5">
                            <button type="submit" class="btn btn-danger btn-block btn-flat">Submit</button>
                        </div>
                        <br/>
                    </div>
                </div>
            </div>

</section>
        <!-- /Left col -->
        
    </div>
</section>