@using System.Web.Mvc.Html
@using System.Web.UI.WebControls
@using InternetBanking_v1.Helper
@model InternetBanking_v1.Models.Login.UserAccount

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout .cshtml";
}

@if (CultureHelper.IsRighToLeft())
{
    <style>
        @@font-face {
            font-family: 'GE';
            src: local('GE'), url('../../Content/GE Dinar Two Medium.otf') format('truetype');
        }

        body {
            font-family: 'GE', serif;
        }
    </style>
}
else
{
    <style>
        @@font-face {
            font-family: 'OPTIMA';
            src: local('OPTIMA'), url('../../Content/OPTIMA.TTF') format('truetype');
        }

        body {
            font-family: 'OPTIMA', serif;
        }
    </style>
}

<div class="login-box">

    <div class="login-logo">

        @*<img src="~/Content/icons/logo.png" />*@
        <p><b>Internet</b>Banking</p>
    </div>
    <!-- /.login-logo -->
    <!-- Navbar Right Menu -->
    @*<div class="navbar-custom-menu">
            <ul class="nav navbar-nav " style="background: rgba(255, 255, 255, 0.56);">

                <!-- Language Switch -->
                <li>@Url.LangSwitcher("English", ViewContext.RouteData, "en")</li>
                <li>@Url.LangSwitcher("عربي", ViewContext.RouteData, "ar")</li>

            </ul>
        </div>*@

    <!-- /.navbar-custom-menu -->

    <div class="login-box-body my-box">

        <ul class="nav navbar-nav " style="        background: rgba(255, 255, 255, 0.61);
        border-radius: 8rem;
        margin-top: -17px;
        margin-right: -19px;
        float: right;
        color: #0b0b0b;">

            <!-- Language Switch -->
            <li>@Url.LangSwitcher("En", ViewContext.RouteData, "en")</li>
            <li>@Url.LangSwitcher("ع", ViewContext.RouteData, "ar")</li>

        </ul>
        <p class="login-box-msg" style="color:black">@GlobalRes.loginBox</p>

        @using (Html.BeginForm("Login", "Login", "POST"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                @Html.ValidationSummary(true)

                <div class="form-group has-feedback">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "userName" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>


                <div class="form-group has-feedback">
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "password", maxlength = "20", minlength = "8", @pattern = "([A-Za-z0-9_@#]{8,20})", @type = "password" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>


                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label style="color:black">
                                @Html.CheckBoxFor(model => model.RememberMe, new { @placeholder = "Remember Me?" })
                                @Html.LabelFor(model => model.RememberMe)
                            </label>
                        </div>
                    </div>

                    <!-- /.col -->

                    <div class="col-xs-4">
                        <input type="submit" value="@GlobalRes.LoginBtn" class="btn btn-primary btn-block btn-flat" onclick="return displayprogressmessage(this, 'Loggin in...');" />

                    </div>
                    <br />
                    <br />
                    @Html.ActionLink("Fotgot your password ?", "Forgotpassword", "Login", new { @style = "color:black;margin-left:5%" })
                    <!-- /.col -->
                </div>

            </div>
        }
    </div>

</div>
<!-- /.login-box -->
<!-- jQuery 3 -->
<script src="~/Content/bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="~/Content/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- iCheck -->
<script src="~/Content/plugins/iCheck/icheck.min.js"></script>
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>

<script>

    function DisplayProgressMessage(ctl, msg) {

        $(ctl).prop("disabled", true);

        $(ctl).text(msg);



        return true;

    };

</script>

